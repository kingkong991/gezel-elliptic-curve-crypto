dp testbench {
	sig A: ns(20);
	sig B: ns(20);
	sig P: ns(20);

	sig T: ns(20);

	sig start: ns(1);

	use montgomery(A, B, P, T, start);

	sfg run {
		A = 1;
		B = 3;
		P = 5;

		start = 1;

		$display("[Cycle ", $cycle, "]");
	}
} hardwired h_testbench (testbench) { run; }

system S {
	testbench;
}